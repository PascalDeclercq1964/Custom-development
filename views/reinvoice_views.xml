<odoo>
<record id="view_move_tree_inherit_reinvoice" model="ir.ui.view">
<field name="name">account.move.tree.reinvoice.inherit</field>
<field name="model">account.move</field>
<field name="inherit_id" ref="account.view_move_tree"/>
<field name="arch" type="xml">
<xpath expr="/tree" position="inside">
<field name="reinvoice_sale_id"/>
</xpath>
</field>
</record>


<record id="view_account_config_settings_inherit_reinvoice" model="ir.ui.view">
<field name="name">res.config.settings.view.form.reinvoice</field>
<field name="model">res.config.settings</field>
<field name="inherit_id" ref="account.res_config_settings_view_form"/>
<field name="arch" type="xml">
<xpath expr="//div[@id='account_settings']//div[last()]" position="after">
<div class="row mt16">
<label for="reinvoice_partner_id" class="col-lg-3 o_light_label"/>
<div class="col-lg-9">
<field name="reinvoice_partner_id"/>
</div>
</div>
</xpath>
</field>
</record>


<record id="server_action_reinvoice_selected" model="ir.actions.server">
<field name="name">Reinvoice selected vendor bills</field>
<field name="model_id" ref="account.model_account_move"/>
<field name="binding_model_id" ref="account.model_account_move"/>
<field name="state">code</field>
<field name="code">model._reinvoice_moves(env['account.move'].browse(context.get('active_ids', [])))</field>
</record>
</odoo>