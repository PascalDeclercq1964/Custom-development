<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Formulierweergave voor de wizard -->
    <record id="purchase_resell_wizard_form_view" model="ir.ui.view">
        <field name="name">purchase.resell.wizard.form</field>
        <field name="model">purchase.resell.wizard</field>
        <field name="arch" type="xml">
            <form string="Factureer Aankoopfacturen Door">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="move_ids" widget="many2many_tags" readonly="1"/>
                    </group>

                    <notebook>
                        <page string="Grootboekrekening Mappings">
                            <field name="account_map_ids">
                                <tree editable="bottom">
                                    <field name="purchase_account_id"/>
                                    <field name="sale_account_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="BTW Code Mappings">
                            <field name="tax_map_ids">
                                <tree editable="bottom">
                                    <field name="purchase_tax_id"/>
                                    <field name="sale_tax_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_resell_invoices" type="object" string="Factureer Door" class="oe_highlight"/>
                    <button string="Annuleren" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>