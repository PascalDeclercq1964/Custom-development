<odoo>
    <template id="b2b_product_price_detail_hiding" inherit_id="website_sale.product_price" name="B2B Prijs Detailpagina Verbergen (ID 2)">
        
        <xpath expr="//div[@itemprop='offers']" position="replace">
            <p>Kakkewiet</p>
            <t t-if="website.id == 2">
                <t t-set="show_price" t-value="env['res.users'].user_can_see_b2b_price()"/>
                
                <t t-if="show_price">
                    <div itemprop="offers" itemscope="itemscope" itemtype="http://schema.org/Offer" t-attf-class="product_price mt-2 mb-3 {{'d-none' if combination_info['prevent_zero_price_sale'] else 'd-inline-block'}}">
                        <h3 class="css_editable_mode_hidden">
                            <span class="oe_price" style="white-space: nowrap;" t-out="combination_info['price']" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                            <span itemprop="price" style="display:none;" t-out="combination_info['price']"/>
                            <span itemprop="priceCurrency" style="display:none;" t-esc="website.currency_id.name"/>
                        </h3>
                        <h3 class="css_non_editable_mode_hidden decimal_precision" t-att-data-precision="str(website.currency_id.decimal_places)">
                            <span t-field="product.list_price" t-options="{'widget': 'monetary', 'display_currency': product.currency_id}"/>
                            <t t-if="is_view_active('website_sale.tax_indication')" t-call="website_sale.tax_indication"/>
                            <del t-if="combination_info['compare_list_price'] and (combination_info['compare_list_price'] &gt; combination_info['price'])">
                                <bdi dir="inherit">
                                </bdi>
                            </del>
                        </h3>
                    </div>
                    </t>
                <t t-else="">
                    <div class="product_price mt-2 mb-3">
                        <h3 class="text-info">
                            Prijs enkel zichtbaar voor B2B-klanten. 
                        </h3>
                    </div>
                </t>
            </t>
            <t t-else="">
                <div itemprop="offers" itemscope="itemscope" itemtype="http://schema.org/Offer" t-attf-class="product_price mt-2 mb-3 {{'d-none' if combination_info['prevent_zero_price_sale'] else 'd-inline-block'}}">
                    <h3 class="css_editable_mode_hidden">
                        <span class="oe_price" style="white-space: nowrap;" t-out="combination_info['price']" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                        <span itemprop="price" style="display:none;" t-out="combination_info['price']"/>
                        <span itemprop="priceCurrency" style="display:none;" t-esc="website.currency_id.name"/>
                    </h3>
                    <h3 class="css_non_editable_mode_hidden decimal_precision" t-att-data-precision="str(website.currency_id.decimal_places)">
                        <span t-field="product.list_price" t-options="{'widget': 'monetary', 'display_currency': product.currency_id}"/>
                        <t t-if="is_view_active('website_sale.tax_indication')" t-call="website_sale.tax_indication"/>
                        <del t-if="combination_info['compare_list_price'] and (combination_info['compare_list_price'] &gt; combination_info['price'])">
                            <bdi dir="inherit">
                            </bdi>
                        </del>
                    </h3>
                </div>
            </t>

        </xpath>
        
        <xpath expr="//div[@id='product_unavailable']" position="replace">
            <t t-if="website.id == 2 and not env['res.users'].user_can_see_b2b_price()">
                 </t>
            <t t-else="">
                <div id="product_unavailable" t-attf-class="{{'d-flex' if combination_info['prevent_zero_price_sale'] else 'd-none'}}">
                    <h3 class="fst-italic" t-field="website.prevent_zero_price_sale_text"/>
                </div>
            </t>
        </xpath>
    </template>
</odoo>